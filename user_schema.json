{
  "$id": "https://example.com/schemas/user.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User",
  "type": "object",
  "additionalProperties": false,
  "required": ["uid", "email", "display_name", "created_time"],
  "properties": {
    "uid": {
      "type": "string",
      "minLength": 1,
      "description": "Auth UID; also used as the users/{uid} doc ID."
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "User email address."
    },
    "display_name": {
      "type": "string",
      "minLength": 1,
      "description": "Display name or handle."
    },
    "created_time": {
      "description": "Account/document creation timestamp.",
      "oneOf": [
        { "type": "string", "format": "date-time" },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["seconds", "nanoseconds"],
          "properties": {
            "seconds": { "type": "integer" },
            "nanoseconds": { "type": "integer", "minimum": 0, "maximum": 999999999 }
          }
        }
      ]
    },
    "birthday": {
      "description": "Birthday (date only or timestamp).",
      "oneOf": [
        { "type": "string", "format": "date" },
        { "type": "string", "format": "date-time" },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["seconds", "nanoseconds"],
          "properties": {
            "seconds": { "type": "integer" },
            "nanoseconds": { "type": "integer", "minimum": 0, "maximum": 999999999 }
          }
        }
      ]
    }
  },
  "examples": [
    {
      "uid": "2oZQ3OOiNdUDDS7mii6Eq2u2OOw2",
      "email": "kemi1@gmail.com",
      "display_name": "Ola",
      "created_time": "2025-09-22T12:09:53-04:00",
      "birthday": "2025-09-09"
    }
  ]
}
